<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gender Reveal</title>
</head>

<body>
    <h1>Gender Reveal</h1>
    <% if (secret) { %>
        <div id="countdown">Countdown: <span id="timer">10</span> seconds</div>
        <div id="reveal-image" style="display: none;">
            <% if (revealImage) { %>
                <p id="secret-revealed" style="display: none;">Secret Revealed: <%= secret %>
                </p>
                <img src="<%= currentImage %>" alt="Reveal Image" width="400">
                <% } else { %>
                    <img src="/1628017469449.jpg" alt="Original Image" width="400">
                    <% } %>
        </div>
        <script src="/countdown.js"></script>
        <script>
            // Start countdown only if revealImage is true
            document.addEventListener('DOMContentLoaded', function () {
                startCountdown();
            });
        </script>
        <% } else { %>
            <div id="reveal-image">
                <img src="/1628017469449.jpg" alt="Original Image" width="400">
            </div>
            <% } %>
                <% if (wellWishes.length> 0) { %>
                    <h2>Well Wishes</h2>
                    <ul>
                        <% wellWishes.forEach(function(wish) { %>
                            <li>
                                <%= wish %>
                            </li>
                            <% }); %>
                    </ul>
                    <% } %>
                        <a href="/wellwishes">Send Well Wishes</a>
</body>

</html>